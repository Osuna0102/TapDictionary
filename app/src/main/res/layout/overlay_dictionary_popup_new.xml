<?xml version="1.0" encoding="utf-8"?>
<!-- 
    Modern Translation Popup - Inspired by web version TranslationPopup.tsx
    Features: Clean card design, better spacing, Material Design 3 principles
-->
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#80000000"
    android:clickable="true"
    android:focusable="true"
    android:padding="16dp">

    <androidx.cardview.widget.CardView
        android:id="@+id/popupCard"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:maxWidth="360dp"
        app:cardCornerRadius="20dp"
        app:cardElevation="24dp"
        android:clickable="true"
        android:focusable="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@android:color/white">

            <!-- Header Section -->
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingStart="20dp"
                android:paddingEnd="12dp"
                android:paddingTop="20dp"
                android:paddingBottom="16dp">

                <LinearLayout
                    android:id="@+id/headerContent"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_toStartOf="@id/closeButton"
                    android:layout_marginEnd="8dp"
                    android:orientation="vertical">

                    <!-- Word and Reading -->
                    <TextView
                        android:id="@+id/wordText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="é£Ÿã¹ã‚‹"
                        android:textSize="28sp"
                        android:textStyle="bold"
                        android:textColor="#1A1A1A"
                        android:letterSpacing="0.01"
                        android:maxLines="2"
                        android:ellipsize="end" />

                    <!-- Part of Speech Badge -->
                    <TextView
                        android:id="@+id/partOfSpeechBadge"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:text="Verb, Ichidan"
                        android:paddingStart="12dp"
                        android:paddingEnd="12dp"
                        android:paddingTop="4dp"
                        android:paddingBottom="4dp"
                        android:background="@drawable/badge_background"
                        android:textSize="11sp"
                        android:textStyle="bold"
                        android:textColor="#0066CC"
                        android:visibility="gone" />

                </LinearLayout>

                <!-- Close Button -->
                <TextView
                    android:id="@+id/closeButton"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:text="Ã—"
                    android:textSize="28sp"
                    android:textColor="#666666"
                    android:gravity="center"
                    android:clickable="true"
                    android:focusable="true"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:contentDescription="Close" />

            </RelativeLayout>

            <!-- Translation Content -->
            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:maxHeight="350dp"
                android:fillViewport="true">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <!-- Main Translation -->
                    <TextView
                        android:id="@+id/translationText"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="to eat"
                        android:textSize="18sp"
                        android:textColor="#424242"
                        android:lineSpacingExtra="4dp"
                        android:paddingStart="20dp"
                        android:paddingEnd="20dp"
                        android:paddingBottom="16dp" />

                    <!-- Example Section (if provided) -->
                    <LinearLayout
                        android:id="@+id/exampleSection"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_marginStart="20dp"
                        android:layout_marginEnd="20dp"
                        android:layout_marginBottom="16dp"
                        android:padding="14dp"
                        android:background="@drawable/example_background"
                        android:visibility="gone">

                        <TextView
                            android:id="@+id/exampleText"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="ç§ã¯æ¯Žæ—¥ã”é£¯ã‚’é£Ÿã¹ã¾ã™ã€‚"
                            android:textSize="14sp"
                            android:textColor="#666666"
                            android:lineSpacingExtra="3dp" />

                    </LinearLayout>

                    <!-- Clickable Sentence Section -->
                    <LinearLayout
                        android:id="@+id/sentenceSection"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:paddingStart="20dp"
                        android:paddingEnd="20dp"
                        android:paddingBottom="16dp"
                        android:background="#F5F5F5"
                        android:visibility="gone">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="ðŸ“ Tap words in sentence:"
                            android:textSize="12sp"
                            android:textColor="#666666"
                            android:textStyle="bold"
                            android:paddingTop="12dp"
                            android:paddingBottom="10dp" />

                        <ScrollView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:maxHeight="120dp">

                            <LinearLayout
                                android:id="@+id/sentenceContainer"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="vertical" />

                        </ScrollView>

                    </LinearLayout>

                </LinearLayout>

            </ScrollView>

            <!-- Divider -->
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#E0E0E0" />

            <!-- Ad Container -->
            <LinearLayout
                android:id="@+id/adContainer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center"
                android:visibility="gone" />

            <!-- Footer Actions -->
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="12dp"
                android:paddingBottom="12dp"
                android:paddingStart="20dp"
                android:paddingEnd="20dp">

                <!-- Action Buttons -->
                <LinearLayout
                    android:id="@+id/actionButtons"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_centerVertical="true"
                    android:orientation="horizontal">

                    <!-- TTS Speaker Button -->
                    <TextView
                        android:id="@+id/speakerButton"
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        android:text="ðŸ”Š"
                        android:textSize="20sp"
                        android:gravity="center"
                        android:clickable="true"
                        android:focusable="true"
                        android:background="@drawable/action_button_background"
                        android:layout_marginEnd="8dp"
                        android:contentDescription="Pronounce word" />

                    <!-- Copy Button (future) -->
                    <TextView
                        android:id="@+id/copyButton"
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        android:text="ðŸ“‹"
                        android:textSize="18sp"
                        android:gravity="center"
                        android:clickable="true"
                        android:focusable="true"
                        android:background="@drawable/action_button_secondary"
                        android:layout_marginEnd="8dp"
                        android:visibility="gone"
                        android:contentDescription="Copy" />

                </LinearLayout>

                <!-- Lookup Count Badge -->
                <TextView
                    android:id="@+id/lookupCountText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:text="12x looked up"
                    android:paddingStart="12dp"
                    android:paddingEnd="12dp"
                    android:paddingTop="6dp"
                    android:paddingBottom="6dp"
                    android:background="@drawable/count_badge_background"
                    android:textSize="11sp"
                    android:textStyle="bold"
                    android:textColor="#0066CC" />

            </RelativeLayout>

        </LinearLayout>

    </androidx.cardview.widget.CardView>

</FrameLayout>
