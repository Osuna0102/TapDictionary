<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <!-- Permiso para mostrar overlay flotante -->
    <uses-permission android:name="android.permission.SYSTEM_ALERT_WINDOW" />
    
    <!-- Permiso para servicio de accesibilidad -->
    <uses-permission
        android:name="android.permission.BIND_ACCESSIBILITY_SERVICE"
        tools:ignore="ProtectedPermissions" />
    
    <!-- Internet para descargar diccionario (opcional) -->
    <uses-permission android:name="android.permission.INTERNET" />
    
    <!-- Permiso para servicio en primer plano -->
    <uses-permission android:name="android.permission.FOREGROUND_SERVICE" />
    
    <!-- Permiso para consultar todos los paquetes instalados (Android 11+) -->
    <uses-permission android:name="android.permission.QUERY_ALL_PACKAGES" />
    
    <!-- Permissions for OCR feature -->
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    
    <!-- For ML Kit -->
    <uses-feature android:name="android.hardware.camera" android:required="false" />

    <application
        android:name=".DictionaryApp"
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.GodTapDictionary"
        tools:targetApi="31">
        
        <!-- ML Kit Text Recognition Dependency -->
        <meta-data
            android:name="com.google.mlkit.vision.DEPENDENCIES"
            android:value="ocr" />
        
        <!-- MainActivity -->
        <activity
            android:name=".MainActivity"
            android:exported="true"
            android:label="@string/app_name"
            android:theme="@style/Theme.GodTapDictionary">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!-- TestActivity -->
        <activity
            android:name=".TestActivity"
            android:exported="false"
            android:label="Test Dictionary"
            android:theme="@style/Theme.GodTapDictionary" />

        <!-- Dictionary Debug Activity -->
        <activity
            android:name=".DictionaryDebugActivity"
            android:exported="false"
            android:label="Dictionary Debug"
            android:theme="@style/Theme.GodTapDictionary" />

        <!-- Dictionary Management Activity -->
        <activity
            android:name=".ui.DictionaryManagementActivity"
            android:exported="false"
            android:label="Manage Dictionaries"
            android:theme="@style/Theme.GodTapDictionary" />

        <!-- Gesture Test Activity -->
        <activity
            android:name=".ui.GestureTestActivity"
            android:exported="false"
            android:label="Gesture Testing Sandbox"
            android:theme="@style/Theme.GodTapDictionary" />

        <!-- App Filter Activity -->
        <activity
            android:name=".ui.AppFilterActivity"
            android:exported="false"
            android:label="App Filter Settings"
            android:theme="@style/Theme.GodTapDictionary" />

        <!-- TTS Settings Activity -->
        <activity
            android:name=".ui.TtsSettingsActivity"
            android:exported="false"
            android:label="Text-to-Speech Settings"
            android:theme="@style/Theme.GodTapDictionary" />

        <!-- Accessibility Service -->
        <service
            android:name=".service.TextSelectionAccessibilityService"
            android:label="@string/accessibility_service_label"
            android:permission="android.permission.BIND_ACCESSIBILITY_SERVICE"
            android:exported="true">
            <intent-filter>
                <action android:name="android.accessibilityservice.AccessibilityService" />
            </intent-filter>
            <meta-data
                android:name="android.accessibilityservice"
                android:resource="@xml/accessibility_service_config" />
        </service>

        <!-- Quick Settings Tile Service -->
        <service
            android:name=".service.DictionaryTileService"
            android:icon="@drawable/ic_dictionary"
            android:label="@string/tile_service_label"
            android:permission="android.permission.BIND_QUICK_SETTINGS_TILE"
            android:exported="true">
            <intent-filter>
                <action android:name="android.service.quicksettings.action.QS_TILE" />
            </intent-filter>
        </service>
        
        <!-- Broadcast Receiver for notification actions -->
        <receiver
            android:name=".receiver.NotificationActionReceiver"
            android:exported="false">
            <intent-filter>
                <action android:name="com.godtap.dictionary.ACTION_TOGGLE_SERVICE" />
                <action android:name="com.godtap.dictionary.ACTION_TOGGLE_UNDERLINE" />
            </intent-filter>
        </receiver>
    </application>

</manifest>
